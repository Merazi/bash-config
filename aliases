# ; -*- shell-script -*-

#######
# Bash aliases file, by Merazi
###

# - directory listing - #

alias ls='ls -FB'
alias la='ls -a'
alias ll='ls -lh'
alias lsa='ls -a'
alias lla='ls -lah'
alias dir='dir --group-directories-first --color=auto -QBh'
alias dirl='dir -g'

# - tools and quality of life - #

alias sudo='sudo '
alias man='info'
alias htop='htop --user=$(whoami)'
alias diskinfo='lsblk -io KNAME,TYPE,SIZE,MODEL'
alias refresh='source ~/.bashrc'
alias ip='ip -c'
alias which='type -a'
alias du='du -kh'
alias df='df -kTh'
alias sc='screen -RR'
alias path='echo -e ${PATH//:/\\n}'
alias edit='emacs -nw'
alias ffmusic='ffplay -nodisp -autoexit -- '
alias cls='clear'

# - apt aliases - #

alias ai='sudo apt install'
alias aii='ai --install-recommends'
alias aiii='aii --install-suggests'

alias au='sudo apt update'
alias auu='au && sudo apt upgrade'
alias auuu='auu && sudo apt full-upgrade'

alias ar='sudo apt remove'
alias arr='ar --autoremove'
alias arrr='arr --purge'

alias am='sudo apt-mark'
alias uplist='apt list --upgradable'

# - bookmarks to different directories - #

alias dsk='cd ~/Desktop/   && ls'
alias dox='cd ~/Documents/ && ls'
alias dwn='cd ~/Downloads/ && ls'
alias mus='cd ~/Music/     && ls'
alias pix='cd ~/Pictures/  && ls'
alias pub='cd ~/Public/    && ls'
alias tmp='cd ~/Templates/ && ls'
alias vid='cd ~/Videos/    && ls'

alias gg='cd ~/Proyects/       && ls'
alias uni='cd ~/Documents/Uni/ && ls'
alias conf='cd ~/.config/      && ls'

# - flatpaks - #

alias fr='flatpak run'
alias eog='fr org.gnome.eog'
alias lollypop='flapak run org.gnome.Lollypop'
alias firefox='fr org.mozilla.firefox'
alias gimp='fr org.gimp.GIMP'
alias clapper='fr com.github.rafostar.Clapper'
alias screenshot='fr io.elementary.screenshot'
alias tasks='fr io.elementary.tasks'
alias calculator='fr io.elementary.calculator'
alias obs='fr com.obsproject.Studio'
alias bible='fr life.bolls.bolls'
alias evince='fr org.gnome.Evince'
alias lo='fr org.libreoffice.LibreOffice'

# - elementaryos apps - #

alias appcenter='io.elementary.appcenter'
alias appstore='appcenter'
alias calendar='io.elementary.calendar'
alias code='io.elementary.code'
alias files='io.elementary.files'
alias music='io.elementary.music'
alias photos='io.elementary.photos'
alias terminal='io.elementary.terminal'
