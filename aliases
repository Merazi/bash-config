# - merazi's aliases - #

#- general aliases -#

alias \
    ls='ls --color=auto' \
    lsa='ls -a' \
    ll='ls -lh' \
    lla='ls -lha' \
    edit='emacs -q -nw' \
    uplist='apt list --upgradable' \
    wget='wget -c' \
    untar='tar xvf' \
    ping='ping -c 5' \
    ipe='curl ipinfo.io/ip && echo' \
    refresh='source ~/.bashrc' \
    play='mpv --no-video' \
    ip='ip -c' \
    mounter='udisksctl mount -b' \
    unmounter='udisksctl unmount -b' \
    sui='sudo -E /bin/bash'
